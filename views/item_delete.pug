extends layout

block content
    h3 #{title}: #{item.name}
    div(class="card-panel blue-grey lighten-2 white-text") 
        p #{item.description} 

    p.red-text.darken-2 #[strong Do you really want to delete this Item?]
        form(method='POST')
            div.form-group
                input#itemid.form-control(type='hidden' name='itemid', value=item._id )

            button.btn.btn-primary(type='submit') Delete