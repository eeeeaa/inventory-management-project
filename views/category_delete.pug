extends layout

block content

    h1 #{title}: #{category.name}
    p #[strong Description:] #{category.description} 

    if item_list.length 


        div(class="collection with-header")
            div.collection-header 
                p #[strong Delete the following items before attempting to delete this category.]
            each item in item_list 
                div(class="collection-item")
                    a(class="truncate" href=item.url) #{item.name} 
                    p(class="truncate") #{item.description}

    else
        p Do you really want to delete this Category?

        form(method='POST')
            div.form-group
                input#categoryid.form-control(type='hidden' name='categoryid', value=category._id )

            button.btn.btn-primary(type='submit') Delete